@model Labb1MVCApplication.Models.FilterLeaveByDateModel
@{
    ViewData["Title"] = "Filter leave";
}
<h1 class="display-4">Leaves for specific month</h1>

<hr />

@if (Model.Leaves.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Employee name
                </th>
                <th>
                    Leave type
                </th>
                <th>
                    Total days for leave
                </th>
                <th>
                    Time when leave was set
                </th>
            </tr>
        </thead>
        @foreach(var item in Model.Leaves)
        {
            var days = item.LeaveEndDate - item.LeaveStartDate;
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model=>item.Employee.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model=>item.LeaveType)
                    </td>
                    <th>
                        @days.Days
                    </th>
                    <th>
                        @Html.DisplayFor(model => item.TimeWhenLeaveWasSet)
                    </th>
                </tr>

        </tbody>
        }
    </table>
}
else
{
    <p>There are no leaves for that specific month</p>
}
<div class="mt-2">
    <a asp-controller="FilterByDate" asp-action="FilterDate" class="btn btn-primary">Return</a>
</div>
